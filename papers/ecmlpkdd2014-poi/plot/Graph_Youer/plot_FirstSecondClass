set boxwidth 1 relative
set style data histogram
set style histogram cluster
set style fill pattern 3 border lt -1
set key title ""

# set key inside top right
set size ratio 1
set xlabel "" offset 0,1
set ylabel "" offset 1.5,0
set xtics rotate by 45 offset 0,0 right
set term post eps enhanced "Helvetica" 25

set yrange[0:1.19]
set key inside right top
#set key at 4,0.74 font "Helvetica,20" left Left reverse
set output "FirstClassNewYork.eps"
plot "FirstClassNewYork_data.txt" using 2:xticlabel(1) title "NAME", "FirstClassNewYork_data.txt" using 3:xticlabel(1) title "NAME+BASE", "FirstClassNewYork_data.txt" using 4:xticlabel(1) title "NAME+BASE+BEST"

set yrange[0:1.19]
set key inside right top
#set key at 4,0.8 font "Helvetica,20" left Left reverse
set output "FirstClassSingapore.eps"
plot "FirstClassSingapore_data.txt" using 2:xticlabel(1) title "NAME", "FirstClassSingapore_data.txt" using 3:xticlabel(1) title "NAME+BASE", "FirstClassSingapore_data.txt" using 4:xticlabel(1) title "NAME+BASE+BEST"

set yrange[0:1]
set key inside right top
#set key at 4,0.5 font "Helvetica,20" left Left reverse
set output "SecondClassNewYork.eps"
plot "SecondClassNewYork_data.txt" using 2:xticlabel(1) title "NAME", "SecondClassNewYork_data.txt" using 3:xticlabel(1) title "NAME+BASE", "SecondClassNewYork_data.txt" using 4:xticlabel(1) title "NAME+BASE+BEST"

set yrange[0:1]
set key inside right top
#set key at 4,0.6 font "Helvetica,20" left Left reverse
set output "SecondClassSingapore.eps"
plot "SecondClassSingapore_data.txt" using 2:xticlabel(1) title "NAME", "SecondClassSingapore_data.txt" using 3:xticlabel(1) title "NAME+BASE", "SecondClassSingapore_data.txt" using 4:xticlabel(1) title "NAME+BASE+BEST"
