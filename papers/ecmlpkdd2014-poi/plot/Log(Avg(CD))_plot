
set boxwidth 1 relative
set style data histogram
set style histogram cluster
set style fill pattern 1 border lt -1
set key title ""
#set key inside right font "Helvetica,15"
#set key outside
set key at 9,4 font "Helvetica,15" left Left reverse
set size ratio 0.618
set yrange [0:4.5]
set xlabel "Category" offset 0,1
set ylabel "Log(Distance)" offset 1.5,0
set xtics rotate by 45 offset 0,0 right
set term post eps enhanced "Helvetica" 25
	
set output "Log(Avg(CD)).eps"
plot "Log(Avg(CD)).txt" using 2:xticlabel(1) title "Food", "Log(Avg(CD)).txt" using 3:xticlabel(1) title "Nightlife Spot", "Log(Avg(CD)).txt" using 4:xticlabel(1) title "Outdoors \\& Recreation", "Log(Avg(CD)).txt" using 5:xticlabel(1) title "Shop \\& Service", "Log(Avg(CD)).txt" using 6:xticlabel(1) title "Travel \\& Transport"
