set boxwidth 1 relative
set style data histogram
set style histogram cluster
set style fill pattern 3 border lt -1

set key title ""
set key inside right top

set size ratio 0.618

set xlabel "DIY" offset 0,-1.5
set ylabel "DIY" offset 1.5,0
set xtics rotate by 45 offset -1.5,-2.5

set term post eps enhanced "Helvetica" 25
set output "Category Classification F1.eps"
plot "Category Classification F1.txt" using 2:xticlabels(1) title "NAME", "Category Classification F1.txt" using 3:xticlabels(1) title "NAME+BASE", "Category Classification F1.txt" using 4:xticlabels(1) title "Best"
